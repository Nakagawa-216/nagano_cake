<div class="container">
<%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
  <div class="row">
    <div class="col m-4"><h2>ジャンル一覧・追加</h2></div>
  </div>
  <div class="row">
    <div class="col-2"><%= f.label :name, "ジャンル名" %></div>
    <div class="col-3"><%= f.text_field :name, :placeholder => "ジャンル名" %></div>
    <div class="col-2"><%= f.submit "新規登録", class: 'btn btn-success btn-sm' %></div>
<% end %>
  </div>
  <div class="row mt-5">
    <div class="col-5">
      <table class="table">
        <thead class="table-active">
          <th class="col-3 text-center">ジャンル</th>
          <th class="col-2"></th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genres_path(genre), class: 'btn btn-success btn-sm' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>








<p></p>



