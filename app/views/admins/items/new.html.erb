<div class="container">
<%= form_with model:@item, url:new_admin_items_path, local:true do |f| %>
  <div class="row">
    <div class="col m-4"><h2>商品新規登録</h2></div>
  </div>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-2"><%= f.label :image, "商品画像" %></div>
    <div class="col-6"><%= f.attachment_field :image %></div>
  </div>
  <div class="row mt-2">
    <div class="col-3"></div>
    <div class="col-2"><%= f.label :name, "商品名" %></div>
    <div class="col-6"><%= f.text_field :name, :placeholder => "商品名", size: "40" %></div>
  </div>
  <div class="row mt-2">
    <div class="col-3"></div>
    <div class="col-2"><%= f.label :introduction, "商品説明" %></div>
    <div class="col-4"><%= f.text_area :introduction, :placeholder => "ここに説明を記述します", style: 'resize: none; height:200px; width: 322px;' %></div>
  </div>
  <div class="row mt-2">
    <div class="col-3"></div>
    <div class="col-2"><%= f.label :genre_id, "ジャンル" %></div>
    <div class="col-6"><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--", style: 'width: 322px;' %></div>
  </div>
  <div class="row mt-2">
    <div class="col-3"></div>
    <div class="col-2"><%= f.label :price, "税抜価格" %></div>
    <div class="col-6"><%= f.text_field :price, :placeholder => "1000", size: "40" %></div>
  </div>
  <div class="row mt-2">
    <div class="col-3"></div>
    <div class="col-3"><%= f.label :is_active, "販売ステータス" %></div>
    <div class="col-6">
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, "販売中", value: true %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, "販売停止中", value: false %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-3 mx-auto"><%= f.submit "新規登録", class: "btn btn-success" %></div>
  </div>
<% end %>
</div>