<h2>注文履歴一覧</h2>
<table>
  <thead>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_path(order) do %>
            <%= order.created_at %>
          <% end %>
        </td>
        <td>
          <%= order.name %>
        </td>
        <td>1</td>
        <td>
          <% order.order_status %>
        </td>
      </tr>
    <% end %>
  </tbody>