<h2>注文履歴一覧</h2>
<table>
  <thead>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_path do %>
            <%= order.created_at %>
          <% end %>
        </td>
        <td>
          <%= order.name %>
        </td>
        <td>1</td>
        <td>
          <% if order.order_status == "payment_waiting" %>
            <span>入金待ち</span>
          <% elsif order.order_status == "payment_confirmation" %>
            <span>入金確認</span>
          <% elsif order.order_status == "in_production" %>
            <span>製作中</span>
          <% elsif order.order_status == "preparing_delivery" %>
            <span>発送準備中</span>
          <% else %>
            <span>発送済み</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>