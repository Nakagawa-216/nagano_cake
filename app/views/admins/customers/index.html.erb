<h2>会員一覧</h2>
<table>
  <thead>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name + customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted == false %>
            <span>有効</span>
          <% else %>
            <span>退会</span>
          <% end %>
        </td>
      </tr>
    <% end %>
    <%= paginate @customers %>
  </tbody>
</table>