<div class="container">
  <div class="row">
    <div class="col m-4"><h2>注文履歴一覧</h2></div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead class="table-active">
        <tr>
          <th>注文日</th>
          <th>配送日</th>
          <th>注文商品</th>
          <th>支払料金</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.postal_code %></br>
              <%= order.address %></br>
              <%= order.name %>
            </td>
            <td class="align-middle">
              <% order.order_items.each do |order_item| %>
                <%= order_item.item.name %></br>
              <% end %>
            </td>
            <td class="align-middle"><%= order.amount_of_payment.to_s(:delimited, delimiter: ',') %>円</td>
            <td class="align-middle text-center"><%= link_to "表示する", order_path(order), class: "btn btn-primary btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


