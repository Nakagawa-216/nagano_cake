<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <h3 class="mt-3">ログイン</h3>
  </div>

  <div class="pl-3 mt-4">
    <div class="row">
      <h5><strong>会員の方はこちらからログイン</strong></h5></br>
    </div>
    <div class="row mt-3">
      <div class="col-lg-3 "><%= f.label :email, "メールアドレス" %></div>
      <div class="col-lg-6"><%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>'60', placeholder: 'sample@example.com' %></div>
    </div>
    <div class="row">
      <div class="col-lg-3"><%= f.label :password, "パスワード" %></div>
      <div class="col-lg-6"><%= f.password_field :password, autocomplete: "current-password", :size=>'60' %></div>
    </div>
    <div class="row mt-4">
      <div class="col-lg-3"></div>
      <div class="col-lg-6"><%= f.submit "ログイン", class: 'btn btn-primary btn-sm' %></div>
    </div>
    <div class="row mt-5">
      <h5><strong>会員登録がお済みでない方</strong></h5>
    </div>
    <div class="row ml-5">
      <%= link_to "こちら", new_customer_registration_path %>
      <span>から新規登録を行ってください。</span>
    </div>
  </div>

</div>






