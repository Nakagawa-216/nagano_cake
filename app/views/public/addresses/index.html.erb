<h2>配送先登録/一覧</h2>
<%= form_with model:@address, url: addresses_path, local:true do |f| %>

<div class="fields">
  <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code, autocomplete: "postal_code" %>
</div>

<div class="fields">
  <%= f.label :address, "住所" %>
  <%= f.text_field :address, autocomplete: "address" %>
</div>

<div class="fields">
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name, autocomplete: "name" %>
</div>

<div class="actions">
  <%= f.submit "新規登録" %>
</div>
<% end %>

<table>
  <thead>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address.id) %>
          <%= link_to "削除する", destroy_address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>