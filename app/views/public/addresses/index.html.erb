<div class="container">
  <div class="row">
    <div class="col m-4"><h2>配送先登録/一覧</h2></div>
  </div>
  <%= form_with model:@address, url: addresses_path, local:true do |f| %>
  <div class="row">
    <div class="col-3"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></div>
    <div class="col-3"><%= f.text_field :postal_code, autocomplete: "postal_code" %></div>
  </div>
  <div class="row mt-2">
    <div class="col-3"><%= f.label :address, "住所" %></div>
    <div class="col-3"><%= f.text_field :address, autocomplete: "address", size: '60' %></div>
  </div>
  <div class="row mt-2">
    <div class="col-3"><%= f.label :name, "宛名" %></div>
    <div class="col-3"><%= f.text_field :name, autocomplete: "name" %></div>
    <div class="col-3"><%= f.submit "新規登録", class: 'btn btn-success btn-sm float-right' %></div>
  </div>
  <% end %>
  <div class="row mt-5">
    <div class="col-9">
      <table class="table table-bordered">
        <thead class="table-active">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td class="text-center">
                <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success" %>
                <%= link_to "削除する", destroy_address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
